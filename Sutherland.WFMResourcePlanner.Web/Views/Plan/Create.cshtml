@{
    ViewData["Title"] = "Plan";
}
<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
    <!-- row -->
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Plans</h5></li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Home
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Plan</a></li>
        </ol>
        <a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ Add Task</a>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card h-auto">
                    <div class="card-header">
                        <h4 class="heading mb-0">Add New Plan </h4>
                    </div>
                    <div class="card-body">
                        <form id="planForm">
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">Plan Title <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="Name" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Vertical<span class="text-danger">*</span></label>
                                    <select class="form-select" name="Vertical" required>
                                        <option value="">Select</option>
                                        <option>Vertical 1</option>
                                        <option>Vertical 2</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Account<span class="text-danger">*</span></label>
                                    <select class="form-select" name="Account" required>
                                        <option value="">Select</option>
                                        <option>Account 1</option>
                                        <option>Account 2</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">Geo<span class="text-danger">*</span></label>
                                    <select class="form-select" name="Geo" required>
                                        <option value="">Select</option>
                                        <option>Geo 1</option>
                                        <option>Geo 2</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Site<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="Site" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Business Unit<span class="text-danger">*</span></label>
                                    <select class="form-select" name="BusinessUnit" required>
                                        <option value="">Select</option>
                                        <option>BU 1</option>
                                        <option>BU 2</option>
                                    </select>
                                </div>
                                <div class="col-md-4 form-check mt-2">
                                    <div style="margin-left:10px">
                                        <input class="form-check-input" type="checkbox" id="soTracker" name="SOTracker" />
                                        <label class="form-check-label" for="soTracker">SO Tracker Required</label>
                                    </div>
                                </div>
                                <div class="col-md-4 form-check mt-2">
                                    <div style="margin-left:10px">
                                        <input class="form-check-input" type="checkbox" id="assumptionSheet" name="AssumptionSheet" />
                                        <label class="form-check-label" for="assumptionSheet">Assumption Sheet Required</label>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Week Start<span class="text-danger">*</span></label>
                                    <select class="form-select" name="WeekStart" required>
                                        <option value="Sunday">Sunday</option>
                                        <option value="Monday">Monday</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Plan From<span class="text-danger">*</span></label>
                                    <input type="date" class="form-control" name="PlanFrom" required />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Plan To<span class="text-danger">*</span></label>
                                    <input type="date" class="form-control" name="PlanTo" required />
                                </div>

                            </div>
                            <hr />

                            <h5>Line Of Business (LOB)</h5>
                            <div id="lobContainer">
                                <!-- LOB blocks will appear here -->
                            </div>

                            <div class="mb-3">
                                <button type="button" class="btn btn-primary btn-sm plan-add-lob">+ Add LOB</button>
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success btn-sm">Save Plan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--**********************************
    Content body end
***********************************-->
@section w3crm_style
{
    <link href="~/w3crm/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/1.6.4/css/buttons.dataTables.min.css" rel="stylesheet">
    <link href="~/w3crm/vendor/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet">

    <!-- tagify-css -->
    <link href="~/w3crm/vendor/tagify/dist/tagify.css" rel="stylesheet">

    <style>
        .lob-block {
            padding: 1rem;
            border: 1px solid #ccc;
            border-radius: 10px;
            margin-bottom: 1rem;
            position: relative;
        }

        .remove-lob-btn {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
}

